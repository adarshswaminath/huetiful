{
  "name": "huetiful-js",
  "version": "1.7.86",
  "type": "module",
  "main": "./dist/index.esm.cjs",
  "module": "./dist/index.mjs",
  "browser": "./dist/index.min.js",
  "jsdelivr": "./dist/index.umd.js",
  "types": "./dist/index.d.ts",
  "description": "Open source TypeScript library for general purpose color manipulations and generating custom color scales.",
  "dependencies": {
    "culori": "^3.0.1"
  },
  "devDependencies": {
    "@types/culori": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "dts-bundle-generator": "^8.0.1",
    "esbuild": "^0.17.19",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "huetiful-js": "^1.7.6",
    "husky": "^8.0.3",
    "nodemon": "^3.0.1",
    "typedoc-plugin-markdown": "^3.17.1",
    "typescript": "^5.3.2"
  },
  "scripts": {
    "docs": "npx typedoc --plugin typedoc-plugin-markdown  && rm -r docs  && mkdir docs && node docs.cjs && git add .",
    "build": "rm -r dist && mkdir dist && node build.cjs",
    "prepare": " npm run build && npm run types",
    "types": "dts-bundle-generator -o ./dist/index.d.ts ./src/index.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --config .prettierrc.json \"src/**/*.ts\" --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": " echo \"[Husky] pre-commit\" && npm run format && npm run lint",
      "pre-push": "git pull"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CONTRIBUTING.md",
    "LICENSE.md",
    "huetiful-logo.png"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/prjctimg/huetiful.git"
  },
  "keywords": [
    "lch",
    "palettes",
    "color blind",
    "color vision deficiency",
    "color schemes",
    "color",
    "culori",
    "gradients",
    "tailwind",
    "cielab",
    "rgb",
    "hsl",
    "hsv",
    "colorbrewer",
    "tailwindcss"
  ],
  "author": "Dean Tarisai",
  "email": "arcaneqoder@gmail.com",
  "homepage": "https://huetiful-docs.vercel.app",
  "license": "Apache-2.0",
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "bugs": {
    "url": "https://github.com/prjctimg/huetiful/issues"
  }
}
