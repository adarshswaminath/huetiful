{
  "name": "huetiful-js",
  "version": "1.95.0",
  "type": "module",
  "main": "./src/index.js",
  "browser": "./lib/huetiful.umd.js",
  "jsdelivr": "./lib/huetiful.umd.js",
  "exports": {
    "./generators": "./src/generators.js",
    "./colors": "./src/colors.js",
    "./utils": "./src/utils.js",
    "./sortBy": "./src/sortBy.js",
    "./filterBy": "./src/filterBy.js",
    "./converters": "./src/converters.js",
    "./helpers": "./src/helpers.js",
    ".": "./lib/index.js"
  },
  "types": "./lib/huetiful.d.ts",
  "description": "Open source TypeScript library for general purpose color manipulations and generating custom color scales.",
  "dependencies": {
    "culori": "^3.3.0"
  },
  "bundleDependencies": [
    "culori"
  ],
  "devDependencies": {
    "@fontsource-variable/space-grotesk": "^5.0.16",
    "@types/culori": "^2.0.0",
    "dts-bundle-generator": "^8.0.1",
    "esbuild": "^0.17.19",
    "eslint": "^8.53.0",
    "github-emoji": "^1.2.0",
    "husky": "^8.0.3",
    "jasmine": "5.1.0",
    "nodemon": "^3.0.1",
    "typedoc": "^0.25.3",
    "typedoc-material-theme": "^1.0.2",
    "typedoc-plugin-markdown": "^3.17.1",
    "typescript": "^5.0.2"
  },
  "scripts": {
    "test": "npx jasmine",
    "css": "npx tailwindcss -i ./docs/assets/css/index.css -o ./docs/assets/css/huetiful.css --watch",
    "docs:compile": "npx typedoc",
    "docs:publish": "npm run docs:compile && npm run docs:build",
    "docs:build": "node docs/assets/js/docs.cjs",
    "code:build": "node build.cjs",
    "code:publish": "npm run code:build & npm run code:types",
    "code:types": "dts-bundle-generator  -o  ./lib/huetiful.d.ts ./types/index.d.ts --no-banner --version true",
    "code:lint": "eslint --fix --ext ./src/*.js",
    "code:format": "prettier \"./src/*.js\" --write",
    "start": "nodemon app.js --watch "
  },
  "husky": {
    "hooks": {}
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "trailingComma": "none",
    "bracketSpacing": true
  },
  "eslintConfig": {
    "root": true,
    "rules": {
      "prefer-const": 0,
      "no-console": 1,
      "no-ternary": 0,
      "no-var": 0,
      "no-explicit-any": 0,
      "no-useless-escape": 0
    }
  },
  "typedocOptions": {
    "entryPoints": [
      "types/generators.d.ts",
      "types/utils.d.ts",
      "types/colors.d.ts",
      "types/converters.d.ts",
      "types/filterBy.d.ts",
      "types/sortBy.d.ts",
      "types/types.d.ts"
    ],
    "plugin": [
      "typedoc-plugin-markdown"
    ],
    "entryPointStrategy": "resolve",
    "out": "docs/assets/markdown",
    "exclude": [
      "./color-maps"
    ],
    "readme": "docs/assets/pages/home.md",
    "tsconfig": "./tsconfig.json",
    "disableSources": false,
    "gitRemote": "main",
    "includeVersion": false
  },
  "files": [
    "lib",
    "src",
    "CHANGELOG.md",
    "CODE_OF_CONDUCT.md",
    "README.md",
    "CONTRIBUTING.md",
    "LICENSE.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/prjctimg/huetiful.git"
  },
  "keywords": [
    "generative art",
    "typescript",
    "uniform colorspaces",
    "color vision deficiency",
    "color",
    "culori",
    "interpolation",
    "tailwind",
    "palette generator",
    "color brewer"
  ],
  "author": "Dean Tarisai",
  "email": "arcaneqoder@gmail.com",
  "homepage": "https://prjctimg.github.io/huetiful",
  "license": "Apache-2.0",
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "bugs": {
    "url": "https://github.com/prjctimg/huetiful/issues"
  }
}
