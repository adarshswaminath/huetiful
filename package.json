{
	"name": "huetiful-js",
	"version": "2.3.0",
	"type": "module",
	"module": "./lib/huetiful.esm.js",
	"main": "./src/index.js",
	"browser": "./lib/huetiful.esm.js",
	"jsdelivr": "./lib/huetiful.min.js",
	"types": "./types/index.d.ts",
	"exports": {
		".": "src/index.js",
		"./accessibility": "src/accessibility/index.js",
		"./collection": "src/collection/index.js",
		"./fp": "src/fp/index.js",
		"./generators": "src/generators/index.js",
		"./wrappers": "src/wrappers/index.js",
		"./palettes": "src/palettes/index.js",
		"./utils": "src/utils/index.js"
	},
	"description": "Function oriented library for color manipulation ðŸ§ª",
	"dependencies": {
		"culori": "^4.0.1"
	},
	"devDependencies": {
		"@types/culori": "^2.1.0",
		"commitizen": "^4.3.0",
		"cz-emoji-conventional": "^1.0.2",
		"esbuild": "^0.17.19",
		"eslint": "^8.53.0",
		"husky": "^8.0.3",
		"jasmine": "5.1.0",
		"nodemon": "^3.0.1",
		"prettier": "^3.2.0",
		"typedoc": "^0.25.3",
		"typedoc-github-wiki-theme": "^1.1.0",
		"typedoc-material-theme": "^1.0.2",
		"typedoc-plugin-markdown": "^4.0.3",
		"typescript": "^5.0.2"
	},
	"scripts": {
		"test": "npx jasmine",
		"docs": "npx typedoc",
		"build": "node ./jobs/build.cjs",
		"code:publish": "npm run build & npx tsc",
		"format": "npx prettier \"./src/*.js\" --write",
		"lint": "npx eslint --fix --ext ./src/*.js",
		"start": "docsify serve ./docs "
	},
	"prettier": {
		"semi": true,
		"singleQuote": true,
		"printWidth": 80,
		"tabWidth": 2,
		"useTabs": true,
		"trailingComma": "none",
		"bracketSpacing": true
	},
	"eslintConfig": {
		"root": true,
		"rules": {
			"prefer-const": 0,
			"no-console": 1,
			"no-ternary": 0,
			"no-var": 0,
			"no-explicit-any": 0,
			"no-useless-escape": 0
		}
	},
	"files": [
		"lib",
		"src",
		"types",
		"CHANGELOG.md",
		"CODE_OF_CONDUCT.md",
		"README.md",
		"CONTRIBUTING.md",
		"LICENSE.md"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/xml-wizard/huetiful.git"
	},
	"keywords": [
		"small",
		"lch",
		"D65",
		"lab",
		"oklch",
		"rgb",
		"jch",
		"color-schemes",
		"colors",
		"culori",
		"palettes",
		"colors",
		"generator",
		"filter",
		"sort",
		"luminance",
		"contrast"
	],
	"author": "Dean Tarisai",
	"email": "prjctimg@outlook.com",
	"homepage": "https://huetiful-js.com",
	"license": "Apache-2.0",
	"engines": {
		"node": "^12.20.0 || ^14.13.1 || >=16.0.0"
	},
	"bugs": {
		"url": "https://github.com/xml-wizard/huetiful/issues"
	}
}
